
{{#each cards}}
    <div class="container mt-4">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <h6><small>{{releaseDate}}</small></h6>
                        <p class="card-text">{{text}}</p>
                        <a href="/cards/edit/{{_id}}" class="btn btn-danger">Edit Card</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


{{/each}}